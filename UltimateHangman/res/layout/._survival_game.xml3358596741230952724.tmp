		        android:layout_margin="1dp"
		        android:padding="4dp"
		        android:text="K"
		        android:textColor="@drawable/sketch_button_textcolor" />
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
