		        android:layout_margin="1dp"
		        android:padding="4dp"
		        android:text="N"
		        android:textColor="@drawable/sketch_button_textcolor" />
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="1dp"
		        android:padding="4dp"
		        android:text="O"
		        android:textColor="@drawable/sketch_button_textcolor" />
            
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_margin="1dp"
		        android:padding="4dp"
		        android:text="P"
		        android:textColor="@drawable/sketch_button_textcolor" />
            
            <TextView
